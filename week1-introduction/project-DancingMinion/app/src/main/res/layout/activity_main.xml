<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/selector_night"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:id="@+id/banana1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/banana2"
        android:layout_width="@dimen/banana_size"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/banana2"
        android:src="@drawable/banana1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/banana_size"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/banana3"
        android:src="@drawable/banana3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/banana_size"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:text="@string/banana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"/>


    <ImageView
        android:id="@+id/minion"
        android:src="@drawable/minion"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="250px"
        android:layout_height="wrap_content" />
</RelativeLayout>
